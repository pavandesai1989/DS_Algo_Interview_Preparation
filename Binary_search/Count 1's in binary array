// { Driver Code Starts
#include <bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
class Solution{
    public:
    // Function to count number of Ones
    // arr: input array 
    // N: size of input array
    int countOnes(int arr[], int N)
    {
        int s = 0;
        int e = N-1;
        int last = -1;
        int ans = 0;
        
        while(s<=e)
        {
            int mid = s + (e-s)/2;
            
            if(arr[mid] == 1)
            {
                last = mid;
                s = mid + 1;
            }
            else if(arr[mid]  == 0)
            {
                //move to left of array
                e = mid-1;
            }
        }
        
        if(last != -1)
           return last + 1;
        else
           return 0;
        
    }
};

// { Driver Code Starts.

int main()
{
    int t;
    cin>>t;
    
    while(t--)
    {
        int n;
        cin>>n;
        int *arr = new int[n]; 
        for(int i = 0; i < n; i++)
            cin>>arr[i];
            
        Solution ob;
        cout <<ob.countOnes(arr, n)<<endl;
    }
    return 0;
}  // } Driver Code Ends 
