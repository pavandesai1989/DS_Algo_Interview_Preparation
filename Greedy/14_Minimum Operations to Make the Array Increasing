//Time O(n) and space O(1)

class Solution {
public:
    int minOperations(vector<int>& nums) 
    {
        int count = 0;
        int n = nums.size();
        
        for(int i=1;i<n;i++)// note i am strting from 1
        {
            int temp = nums[i];
            nums[i] = max(nums[i],nums[i-1]+1);
            count = count + nums[i] - temp;
        }
        
        return count;
        
    }
};


