//
#include<stack>
#include<algorithm>
vector<int> nextSmallerElement(vector<int> &arr, int n)
{
   stack<int> s;
   vector<int> ans(n); 
   for(int i=n-1;i>=0;i--)
   {
       int ele = arr[i];
       
       while(!s.empty() && s.top()>= ele)
           s.pop();
       
       int res = (s.empty()) ? -1 : s.top();
       ans[i] = res;
       s.push(ele);
       
   }
    return ans;
}
