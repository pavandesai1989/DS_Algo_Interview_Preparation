**** BRUTE FORCE*****
Time: o(n) if sorted array is given 
o(nlogn) if unsorted array is given.Sort that array first

//{ Driver Code Starts
#include<bits/stdc++.h>
using namespace std;
// #include <algorithm>


// } Driver Code Ends
class Solution{
    public:
    // arr: input array
    // n: size of array
    //Function to sort the array into a wave-like array.
    void convertToWave(int n, vector<int>& arr)
    {
       for(int i=0;i<n-1;i=i+2)
         swap(arr[i],arr[i+1]);
        
    }
};


**** OPTIMAL******.  Time: o(n) no need to sort that array 

//{ Driver Code Starts
#include<bits/stdc++.h>
using namespace std;
// #include <algorithm>


// } Driver Code Ends
class Solution{
    public:
    // arr: input array
    // n: size of array
    //Function to sort the array into a wave-like array.
    void convertToWave(int n, vector<int>& arr)
    {
       for(int i=0;i<n-1;i=i+2)
         swap(arr[i],arr[i+1]);
        
    }
};

















